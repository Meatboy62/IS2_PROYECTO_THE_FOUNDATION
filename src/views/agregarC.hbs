  <div class="container rounded letraLOL">
    <form class="" style=color:white; action="http://localhost:3000/campeones/" method="POST">
        <div class="row">
          <div class="col">
            <label>ID</label>
            <input type="number" name="id" class="form-control" required>
            <label>Nombre del campeón</label>
            <input type="text" name="nombre_campeon" class="form-control" required>
            <label>Descripción del campeón</label>
            <textarea name="campeon_desc" class="form-control" rows="10" style="resize:none;" required></textarea>
          </div>
          <div class="col">
            <label>Rol del campeón</label>
            <input name="rol" type="text" class="form-control" required>
            <label>Imagen</label>
            <input name="imagen" type="text" class="form-control" placeholder="dirección URL" required>
            <label>Pasiva del campeón</label>
            <textarea name="pasiva" class="form-control" rows="7" style="resize:none;" required></textarea>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label>Nombre de la Habilidad Q</label>
            <textarea name="habilidad_q" class="form-control" rows="1" style="resize:none;" required></textarea>
            <label>Habilidad Q</label>
            <textarea name="q_desc" class="form-control" rows="3" style="resize:none;" required></textarea>
            <label>Nombre de la Habilidad W</label>
            <textarea name="habilidad_w" class="form-control" rows="1" style="resize:none;" required></textarea>
            <label>Habilidad W</label>
            <textarea name="w_desc" class="form-control" rows="3" style="resize:none;" required></textarea>
          </div>
          <div class="col">
            <label>Nombre de la Habilidad E</label>
            <textarea name="habilidad_e" class="form-control" rows="1" style="resize:none;" required></textarea>
            <label>Habilidad E</label>
            <textarea name="e_desc" class="form-control" rows="3" style="resize:none;" required></textarea>
            <label>Nombre de la Habilidad R</label>
            <textarea name="habilidad_r" class="form-control" rows="1" style="resize:none;" required></textarea>
            <label>Habilidad R</label>
            <textarea name="r_desc" class="form-control" rows="3" style="resize:none;" required></textarea>
          </div>
        </div>
        <br>
        <div style="text-align: center;">
          <button  type="submit" class="btn btn-dark">Agregar Campeón</button>
        </div>
      </form>
      <br>
  </div>